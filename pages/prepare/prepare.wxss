@import "../../app.wxss";
.bind-header{
  position: relative;
  width: 100%;
  height: 300rpx;
  overflow: hidden;
  border-radius: 0 0 50% 50%;
  background-color: #249dee;
}
.bind-header .header-logo{
  display: block;
  width: 200rpx;
  height: 200rpx;
  border-radius: 100%;
  margin: 40rpx auto 50rpx;
  border: 3px solid #eee;
}
.bind-form {
  width: 90%;
  margin: 10% auto 0;
  border-radius: 10px;
  /* border: thin solid #eee; */
  background-color: #fff;
  /* box-shadow: 0 5px 10px rgba(0,0,0,0.1); */
}
.bind-form .form-group {
  overflow: hidden;
  position: relative;
  padding: 20rpx 20rpx;
}
.bind-form .form-field.form-input{
  padding: 16rpx 20rpx;
  border-radius: 5px;
  border: thin solid #eee;
}
.bind-form .form-field.form-radio {
    padding: 0rpx;
    border-radius: 5px;
}
.bind-form .form-field.form-radio radio:first-child{
    padding-right: 30rpx;
}
.bind-form .form-field button[type='primary']{
  width: 100%;
  font-weight: 400;
  background-color: #ffffff;
  border-radius: 50rpx;
}
/* 头部 */
.custom-navbar{
  margin-top: 80rpx;
  position: relative;
  width: 100%;
}
.custom-navbar .custom-navimage{
  margin:0 auto;
  position: relative;
  text-align: center;
}
.custom-navbar .custom-navimage image{
  height: 120rpx;
  width: 120rpx;
  margin: 20rpx;
}
.custom-navbar .custom-navtitle{
  font-size: 32rpx;
  text-align:center;
  font-weight: bold;
}

.poster {
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.advert {
  width: 600rpx;
  height: 750rpx;
  position: relative;
}

.advert image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  overflow-y: scroll;
}

.advert view {
  width: 50rpx;
  height: 50rpx;
  line-height: 42rpx;
  text-align: center;
  border-radius: 50%;
  border: 5rpx solid #fff;
  color: #fff;
  position: absolute;
  left: 50%;
  top: -13%;
  transform: translate(-50%, 0);
  font-weight: bold;
}
