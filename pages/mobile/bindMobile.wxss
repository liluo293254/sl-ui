.bind-header{
  position: relative;
  width: 100%;
  height: 300rpx;
  overflow: hidden;
  border-radius: 0 0 50% 50%;
}
.bind-header .header-logo{
  display: block;
  width: 200rpx;
  height: 200rpx;
  border-radius: 100%;
  margin: 40rpx auto;
  border: 3px solid #eee;
}
.bind-form {
  width: 90%;
  margin: 80rpx auto 0;
  border-radius: 10px;
  border: thin solid #eee;
  background-color: #fff;
  /* box-shadow: 0 5px 10px rgba(0,0,0,0.1); */
}
.bind-form .form-group {
  overflow: hidden;
  position: relative;
  margin: 60rpx 20rpx;
}
.bind-form .form-field.form-input{
  padding: 16rpx 20rpx;
  border-radius: 5px;
  border: thin solid #eee;
}
.bind-form .form-field button[type='primary']{
  width: 90%;
  font-weight: 400;
  border-radius: 50rpx;
  background:#fff;
  line-height: 70rpx;
}

.avatar{
  width: 80px;
  padding:0;
  background: none;
  margin: 40rpx auto;
}
.avatar image{
  width: 80px;
  height: 80px;
  border-radius: 100px;
}
.weui-input{
  width: 90%;
  height: 60px;
  margin:20px auto;
  background: #eee;
  border-radius: 5px;
  padding-left: 15px;
}
.poster,.wifiset {
  width: 100vw;
  height: 100vh;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.advert {
  width: 80%;
  height: 65%;
  position: relative;
  border-radius: 10px;
  background-color: #fff;
  overflow: auto;
  margin: auto;
}
.wifiset .advert{
    height: auto;
}

.advert image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  overflow-y: scroll;
}

.advert .close-item {
  width: 50rpx;
  height: 50rpx;
  line-height: 44rpx;
  text-align: center;
  border-radius: 50%;
  border: 5rpx solid #fff;
  color: #fff;
  position: absolute;
  left: 50%;
  top: -13%;
  transform: translate(-50%, 0);
  font-weight: bold;
}
.tui-list-box{
  width: 95%;
  margin: 20px auto;
}
.tui-menu-list{
  width: 90%;
  margin: 10px auto;
  display: table;
}
.tui-menu-list text{
  float: left;
}