@import "../../utils/color.wxss";
@import "../../utils/image.wxss";
@import '../../utils/iconfont.wxss';
/* 便捷入口 */
.conven {
    width: 100%;
    margin: 0 auto 0px;
    flex-direction: column;
    font-size: 14px;
    width: 100%;
    border-radius: 10px;
    overflow: hidden;
    padding-bottom: 3px;
  }
  
  .conven-small {
    width: 100%;
    /* height: 85px; */
    background-color: white;
    /* display: flex; */
    margin: 0 auto;
    border-radius: 10px;
  }
  
  .conven-small-list {
    width: 25%;
    margin: 20rpx 0;
    display: flex;
    flex-direction: column;
    float: left;
    text-align: center;
  }
  
  .conven-small-list image {
    width: 70rpx;
    height: 70rpx;
    background-color: white;
    text-align: center;
    margin: auto;
  }
  
  .conven-small-list p {
    line-height: 20px;
    color: #333;
    font-size: 14px;
    background-color: white;
    margin: auto;
  }
  .conven1 {
    width: 95%;
  
    text-align: center;
    margin: 10px auto;
    background-color: white;
    display: flex;
    border-radius: 10px;
    box-shadow: 0px 1px 10px #eee;
    flex-direction: column;
  }