.bind-header{
  position: relative;
  width: 100%;
  height: 300rpx;
  overflow: hidden;
  border-radius: 0 0 50% 50%;
  background-color: #249dee;
}
.bind-header .header-logo{
  display: block;
  width: 200rpx;
  height: 200rpx;
  border-radius: 100%;
  margin: 40rpx auto 50rpx;
  border: 3px solid #eee;
}
.bind-form {
  width: 90%;
  margin: 80rpx auto 0;
  border-radius: 10px;
  border: thin solid #eee;
  background-color: #fff;
  /* box-shadow: 0 5px 10px rgba(0,0,0,0.1); */
}
.bind-form .form-group {
  overflow: hidden;
  position: relative;
  padding: 40rpx 20rpx;
}
.bind-form .form-field.form-input{
  padding: 16rpx 20rpx;
  border-radius: 5px;
  border: thin solid #eee;
}
.bind-form .form-field button[type='primary']{
  width: 100%;
  font-weight: 400;
  background-color: #249dee;
}